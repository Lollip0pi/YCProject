    "version": "0.2.0",
    "configurations": [
        {
            "name": "AuthAPI",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/API/AuthAPI/bin/Debug/net6.0/AuthAPI.dll",
            "args": [],
            "cwd": "${workspaceFolder}/API/AuthAPI",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}